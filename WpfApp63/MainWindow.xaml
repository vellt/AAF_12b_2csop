<Window x:Class="WpfApp63.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp63"
        mc:Ignorable="d"
        Icon="topjoy.ico" Background="#1C203A"
        Title="Topjoy" Height="400" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="50 0">
            <Image Source="topjoy.png" Height="100" Margin="20"/>
            <TextBlock Name="szoveg" Text="Kattints az üziért!" Background="#00CC6A" 
                       TextAlignment="Center" Foreground="White" Padding="15" FontSize="20"/>
            <Button Name="gomb" Content="Új üzenetet kérek" Background="Green"
                    Foreground="White" FontSize="15" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
