<Window x:Class="WpfApp67.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp67"
        Background="Black"
        BorderBrush="Yellow"
        BorderThickness="5"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <StackPanel  Orientation="Vertical" VerticalAlignment="Center">
            <Image Name="kep" Source="kepek/1.jpg" Height="300"/>
            <TextBlock Name="szoveg" Margin="50" FontSize="30" TextWrapping="Wrap" TextAlignment="Center" Foreground="White" Text="Amikor meghívod a csajt Netflix-ezni és lazulni, miközben tudod, hogy nincs Netflix-ed."/>
            <Button Name="button" Padding="10" BorderThickness="5" BorderBrush="Orange" FontWeight="Bold" FontSize="40" Background="Yellow" Foreground="Orange" HorizontalAlignment="Center"  Content="Új meme"/>
        </StackPanel>
    </Grid>
</Window>
