<Window x:Class="WpfApp39.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp39"
        mc:Ignorable="d"
        Icon="ablak.ico"
        Background="CadetBlue"
        Title="Üdvözlő app" Height="300" Width="800" BorderThickness="5" BorderBrush="White">
    <Grid>
        <StackPanel Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock Text="Név" FontSize="30" Margin="10"/>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Vezeténév"/>
                <TextBox Name="veznev" FontSize="20" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Keresztnév *"/>
                <TextBox Name="kernev" FontSize="20" Width="200"/>
            </StackPanel>
            <Button Name="gomb" Content="Helló" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
