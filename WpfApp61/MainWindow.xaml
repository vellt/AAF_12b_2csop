<Window x:Class="WpfApp61.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp61"
        mc:Ignorable="d"
        Title="Galéria" Height="400" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image Name="kep" Source="01.jpg" Height="300" Stretch="UniformToFill"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="vissza" Content="Vissza" FontSize="25" Width="180" Height="50" Margin="10"/>
                <Button Name="elore" Content="Előre" FontSize="25" Width="180" Margin="10" Height="50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
