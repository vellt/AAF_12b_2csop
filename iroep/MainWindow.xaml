<Window x:Class="iroep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iroep"
        mc:Ignorable="d"
        Icon ="typewriter.ico"
        Title="irogép" Height="500" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Írd be a szöveget" FontSize="20" Margin="10"/>
            <TextBox Name="betu" Height="300" FontSize="20" TextWrapping="Wrap" BorderThickness="5" Margin="10"
                     Padding="5"/>
            <TextBlock FontSize="20" Margin="10">
                Karaterek száma: <TextBlock Name="szam" Text="0"  FontSize="20" Foreground="Red" FontWeight="Black"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
